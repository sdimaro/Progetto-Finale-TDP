<%- include('../partials/header') %>

<!-- Hero Section -->
<section class="hero-section text-center text-white bg-success">
    <div class="container py-5">
        <h1 class="display-4 fw-bold mb-4">Calcolatore IMC</h1>
        <p class="lead mb-4">Inserisci i tuoi dati per calcolare l'Indice di Massa Corporea</p>
    </div>
</section>

<!-- Form Base -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <h2 class="text-center mb-4">Dati Personali</h2>
                        
                        <form>
                            <div class="mb-3">
                                <label for="altezza" class="form-label">Altezza (cm)</label>
                                <input type="number" class="form-control" id="altezza" placeholder="Es. 175">
                            </div>
                            
                            <div class="mb-3">
                                <label for="peso" class="form-label">Peso (kg)</label>
                                <input type="number" class="form-control" id="peso" placeholder="Es. 70">
                            </div>
                            
                            <button type="submit" class="btn btn-success w-100">Calcola</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Risultato (sezione vuota) -->
<section class="py-5">
    <div class="container text-center">
        <h3>Il tuo risultato apparir√† qui</h3>
        <p class="text-muted">Dopo aver inserito i dati e cliccato su Calcola</p>
    </div>
</section>

<%- include('../partials/footer') %>


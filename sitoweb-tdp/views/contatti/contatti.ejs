    <div class="container">
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <div class="p-4 rounded-3 bg-light-green h-100">
                    <i class="fas fa-map-marker-alt fa-3x mb-3 text-success"></i>
                    <h3>Dove Siamo</h3>
                    <p class="mb-0">ITIS Leonardo Da Vinci<br>Via Toscana 10, Parma, PR Italia</p>
                </div>
            </div>
            
            <div class="col-md-4 text-center">
                <div class="p-4 rounded-3 bg-light-green h-100">
                    <i class="fas fa-phone fa-3x mb-3 text-success"></i>
                    <h3>Telefono</h3>
                    <p class="mb-0">+39 12 3456789<br>Lun-Ven: 9:00-18:00</p>
                </div>
            </div>
            
            <div class="col-md-4 text-center">
                <div class="p-4 rounded-3 bg-light-green h-100">
                    <i class="fas fa-envelope fa-3x mb-3 text-success"></i>
                    <h3>Email</h3>
                    <p class="mb-0">saiman.bayoud@itis.pr.it<br>supporto@benesserenaturale.it</p>
                </div>
            </div>
        </div>
    </div>
</section>


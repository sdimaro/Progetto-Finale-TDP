<%- include('../partials/header') %>

    <main class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Registrati</h2>

                        <% if (typeof errors !=='undefined' && errors.length> 0) { %>
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    <% errors.forEach(function(err){ %>
                                        <li>
                                            <%= err.msg %>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>
                            <% } %>

                                <form action="/auth/register" method="POST">
                                    <div class="mb-3">
                                        <label for="username" class="form-label">Nome Utente</label>
                                        <input type="text" class="form-control" id="username" name="username"
                                            placeholder="Inserisci nome utente" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email"
                                            placeholder="esempio@dominio.com" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="password" name="password"
                                            placeholder="Minimo 6 caratteri" required minlength="6">
                                    </div>
                                    <div class="mb-3">
                                        <label for="confirmPassword" class="form-label">Conferma Password</label>
                                        <input type="password" class="form-control" id="confirmPassword"
                                            name="confirmPassword" placeholder="Reinserisci password" required
                                            minlength="6">
                                    </div>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-success">Registrati</button>
                                    </div>
                                </form>

                                <p class="text-center mt-3 small">
                                    Hai gi√† un account? <a href="/auth/login">Accedi</a>
                                </p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Salute & Benessere Naturale</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fas fa-leaf me-2"></i>Salute & Benessere Naturale
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/forum">Forum</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/approfondimenti">Approfondimenti</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/articoli">Articoli</a>
                    </li>
                    <li class="nav-item dropdown">
                        <div class="dropdown-wrapper">
                            <a class="nav-link" href="/strumenti">Strumenti</a>
                            <a class="dropdown-toggle" id="strumentiDropdown" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <span class="visually-hidden">Toggle dropdown</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="strumentiDropdown">
                                <li><a class="dropdown-item" href="/strumenti/timer">Timer</a></li>
                                <li><a class="dropdown-item" href="/strumenti/imc">Calcola il tuo IMC</a></li>
                                <li><a class="dropdown-item" href="/strumenti/CalcolaKCal">Calcola fabbisogno
                                        calorico</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contatti">Info&Contatti</a>
                    </li>
                </ul>

                <!-- Aggiunta sezione autenticazione -->
                <div class="auth-section">
                    <% if(currentUser) { %>
                        <a class="nav-link" href="/auth/profilo">
                            <i class="fas fa-user me-2"></i>
                            <%= currentUser.username %>
                        </a>
                        <a class="logout-link nav-link" href="/auth/logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a>
                        <% } else { %>
                            <a class="auth-link nav-link" href="/auth/login">
                                <i class="fas fa-sign-in-alt me-2"></i>Accedi
                            </a>
                            <a class="auth-link nav-link" href="/auth/register">
                                <i class="fas fa-user-plus me-2"></i>Registrati
                            </a>
                            <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Script ORIGINALE intatto -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Make dropdowns show on hover
            const dropdownElements = document.querySelectorAll('.nav-item.dropdown');

            dropdownElements.forEach(el => {
                const toggle = el.querySelector('.dropdown-toggle');
                const link = el.querySelector('.nav-link');

                // Desktop hover behavior
                el.addEventListener('mouseenter', function () {
                    if (window.innerWidth >= 992) {
                        const bsDropdown = bootstrap.Dropdown.getOrCreateInstance(toggle);
                        bsDropdown.show();
                    }
                });

                el.addEventListener('mouseleave', function () {
                    if (window.innerWidth >= 992) {
                        const bsDropdown = bootstrap.Dropdown.getInstance(toggle);
                        if (bsDropdown) bsDropdown.hide();
                    }
                });

                // Mobile behavior - ensure link doesn't navigate when clicking dropdown
                if (window.innerWidth < 992) {
                    link.addEventListener('click', function (e) {
                        e.preventDefault();
                    });
                }
            });
        });
    </script>
</body>

</html>
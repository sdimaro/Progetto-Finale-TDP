<%- include('../partials/header') %>

    <main class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="d-flex align-items-center mb-4">
                    <i class="fas fa-edit text-success me-3 fs-1"></i>
                    <h1 class="fw-bold mb-0">Modifica Argomento</h1>
                </div>

                <form action="/health/<%= topic.id %>" method="POST" class="bg-light-green p-4 rounded shadow-sm">
                    <div class="mb-3">
                        <label for="title" class="form-label fw-bold">Titolo:</label>
                        <input type="text" class="form-control form-control-lg" id="title" name="title"
                            value="<%= topic.title %>" required>
                    </div>

                    <div class="mb-4">
                        <label for="description" class="form-label fw-bold">Descrizione:</label>
                        <textarea class="form-control" id="description" name="description" rows="5"
                            required><%= topic.description %></textarea>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-success px-4 py-2">
                            <i class="fas fa-save me-2"></i>Salva modifiche
                        </button>
                        <a href="/health" class="text-decoration-none text-muted">
                            <i class="fas fa-arrow-left me-1"></i>Torna alla lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
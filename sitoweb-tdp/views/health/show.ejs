<%- include('../partials/header') %>

    <main class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="d-flex align-items-center mb-4">
                    <i class="fas fa-file-alt text-success me-3 fs-1"></i>
                    <h1 class="fw-bold mb-0">
                        <%= topic.title %>
                    </h1>
                </div>

                <div class="card border-success mb-4 shadow-sm">
                    <div class="card-body">
                        <p class="card-text fs-5">
                            <%= topic.description %>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent d-flex justify-content-end">
                        <div class="btn-group">
                            <a href="/health/<%= topic.id %>/edit" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>Modifica
                            </a>
                            <form action="/health/<%= topic.id %>/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash-alt me-1"></i>Elimina
                                </button>
                            </form>
                            <a href="/health" class="btn btn-outline-secondary">
                                <i class="fas fa-list me-1"></i>Torna alla lista
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
<%- include('../partials/header') %>

    <main class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-heartbeat text-success me-3 fs-1"></i>
                        <h1 class="fw-bold mb-0">Forum su Salute e Benessere</h1>
                    </div>
                    <a href="/health/new" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Aggiungi nuovo
                    </a>
                </div>

                <% if (topics.length===0) { %>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>Nessun argomento presente.
                    </div>
                    <% } else { %>
                        <div class="list-group">
                            <% topics.forEach(topic=> { %>
                                <div class="list-group-item mb-3 rounded shadow-sm">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h3 class="fw-bold text-success">
                                                <%= topic.title %>
                                            </h3>
                                            <p class="mb-2">
                                                <%= topic.description %>
                                            </p>
                                        </div>
                                        <div class="btn-group">
                                            <a href="/health/<%= topic.id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>Visualizza
                                            </a>
                                            <a href="/health/<%= topic.id %>/edit"
                                                class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit me-1"></i>Modifica
                                            </a>
                                            <form action="/health/<%= topic.id %>/delete" method="POST"
                                                class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash-alt me-1"></i>Elimina
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>